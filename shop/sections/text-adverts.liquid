              },
              {
                "value": "award",
                "label": "Award"
              },
              {
                "value": "bell",
                "label": "Bell"
              },
              {
                "value": "bookmark",
                "label": "Bookmark"
              },
              {
                "value": "box",
                "label": "Box"
              },
              {
                "value": "calendar",
                "label": "Calendar"
              },
              {
                "value": "coffee",
                "label": "Coffee"
              },
              {
                "value": "message-circle",
                "label": "Chat bubble"
              },
              {
                "value": "clock",
                "label": "Clock"
              },
              {
                "value": "compass",
                "label": "Compass"
              },
              {
                "value": "truck",
                "label": "Delivery truck"
              },
              {
                "value": "dollar-sign",
                "label": "Dollar"
              },
              {
                "value": "film",
                "label": "Film"
              },
              {
                "value": "smile",
                "label": "Happy face"
              },
              {
                "value": "heart",
                "label": "Heart"
              },
              {
                "value": "key",
                "label": "Key"
