              {
                "value": "play",
                "label": "Play icon"
              },
              {
                "value": "trending-up",
                "label": "Trending"
              }
            ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
        {
          "type": "url",
